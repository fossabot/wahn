{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "./.build",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "moduleResolution": "node",
        "strict": true,
        "sourceMap": true,
        "inlineSources": false,
        "strictNullChecks": true,
        "watch": true,
        "allowSyntheticDefaultImports": false
    },
    "filesGlob": ["typings.d.ts", "./src/**/*.ts", "./test/**/*.ts"],
    "exclude": ["node_modules"]
}
